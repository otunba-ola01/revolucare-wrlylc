{
  "name": "revolucare-backend",
  "version": "1.0.0",
  "description": "Backend services for the Revolucare care management platform",
  "main": "dist/index.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon",
    "build": "tsc -p tsconfig.json",
    "lint": "eslint --ext .ts src/",
    "lint:fix": "eslint --ext .ts src/ --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --config jest-e2e.config.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:seed": "ts-node prisma/seed.ts",
    "prepare": "npm run prisma:generate",
    "clean": "rimraf dist coverage",
    "prestart": "npm run build",
    "postinstall": "npm run prisma:generate"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.345.0",
    "@azure/ai-form-recognizer": "^4.0.0",
    "@azure/msal-node": "^1.17.2",
    "@googlemaps/google-maps-services-js": "^3.3.28",
    "@microsoft/microsoft-graph-client": "^3.0.5",
    "@prisma/client": "^6.5.0",
    "@sendgrid/client": "^7.7.0",
    "@sendgrid/mail": "^7.7.0",
    "@vercel/blob": "^0.14.0",
    "argon2": "^0.30.3",
    "axios": "^1.4.0",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.2",
    "bull": "^4.10.0",
    "clamscan": "^2.1.2",
    "cls-hooked": "^4.2.2",
    "compression": "^1.7.4",
    "cookie": "^0.5.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csrf": "^3.1.0",
    "date-fns": "^2.30.0",
    "dotenv": "^16.0.3",
    "events": "^1.1.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.1",
    "file-type": "^18.0.0",
    "fs-extra": "^11.1.0",
    "haversine-distance": "^1.2.1",
    "helmet": "^6.0.1",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.0",
    "mime": "^3.0.0",
    "mime-types": "^2.1.35",
    "morgan": "^1.10.0",
    "ms": "^2.1.3",
    "multer": "^1.4.5-lts.1",
    "on-finished": "^2.4.1",
    "openai": "^4.0.0",
    "pino": "^8.0.0",
    "pino-pretty": "^10.0.1",
    "redis": "^4.6.7",
    "socket.io": "^4.6.1",
    "stripe": "^12.0.0",
    "tslib": "^2.6.0",
    "tsyringe": "^4.7.0",
    "twilio": "^4.11.0",
    "uuid": "^9.0.0",
    "validator": "^13.9.0",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1",
    "xss": "^1.0.14",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@jest/types": "^29.5.0",
    "@types/body-parser": "^1.19.2",
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.16.16",
    "@types/socket.io": "^3.0.2",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.2.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^1.7.1",
    "ioredis-mock": "^8.0.0",
    "jest": "^29.5.0",
    "jest-mock-extended": "^3.0.5",
    "nock": "^13.3.0",
    "nodemon": "^2.0.22",
    "prettier": "^3.0.0",
    "prisma": "^6.5.0",
    "rimraf": "^5.0.1",
    "supertest": "^6.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.4"
  },
  "keywords": [
    "healthcare",
    "care-management",
    "api",
    "typescript",
    "express",
    "prisma"
  ],
  "author": "Revolucare Team",
  "license": "UNLICENSED",
  "private": true,
  "prisma": {
    "schema": "prisma/schema.prisma",
    "seed": "ts-node prisma/seed.ts"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts,json",
    "exec": "ts-node -r tsconfig-paths/register src/index.ts"
  }
}